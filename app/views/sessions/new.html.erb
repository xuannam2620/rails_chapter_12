<%= provide :title, t("login_page.login") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:sessions, url: login_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("login_page.login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t("login_page.new_user") %> <%= link_to t("login_page.sign_up_now"),
      signup_path %></p>
  </div>
</div>
